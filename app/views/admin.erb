<% if admin? %>
<br>
<center>
<h3>Admin Powers</h3>
<div>
<h4>Add a new member:</h4>
<form action="/add_member" method="POST">
  <input class="form-control width15" type="text" name="username">
  <input class="form-control width15" type="password" name="password">
  <select class="form-control width10" name="rank">
    <option value="Member">Member</option>
    <option value="Council">Council</option>
    <option value="Admin">Admin</option>
  </select>
  <input class="btn btn-success" type="submit" value="Add member">
</form>
</div>

<div>
<h4>Delete a member:</h4>
<form action="/delete_member" method="POST">
  <select class="form-control width10" name="member">
    <% @members.each do |member| %>
      <option value=<%= member.username %>><%= member.username.capitalize %></option>
    <% end %>
  </select>
  <input class="btn btn-danger" type="submit" value="Delete Member">
</form>
</div>

<div>
<h4>Manually update points</h4>
<form action="/update_points" method="POST">
    <select class="form-control width10" name="member">
      <% @members.each do |member| %>
        <option value=<%= member.username %>><%= member.username.capitalize %></option>
      <% end %>
    </select>
    <input class="form-control width15"   type="text" name="points" placeholder="Enter new points value">
    <input class="btn btn-success" type="submit" value="Update Member">
</form>
</div>

<div>
<h4>Update User's Rank</h4>
<form action="/update_rank" method="POST">
  <select class="form-control width10" name="member">
    <% @members.each do |member| %>
      <option value=<%= member.username %>><%= member.username.capitalize %></option>
    <% end %>
   </select>
  <select class="form-control width10" name="rank">
    <option value="Member">Member</option>
    <option value="Council">Council</option>
    <option value="Admin">Admin</option>
  </select>
  <input class="btn btn-success" type="submit" value="Update Rank">
</form>
</div>
</center>
<% end %>
