<div class="editor">
  <h4>You are editing run: <%= @run.id %></h4>
  <p>You cannot add users to a pre-existing run. Everything else is editable.</p>
  <form action="/logs" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <input type="hidden" name="id" value=<%= @run.id %>>
    <span style="display:inline-block">
      <label for="boss">Boss:</label>
      <input class="form-control" type="text" name="boss" value="<%= @run.boss.name %>" disabled>
    </span>
    <span style="display:inline-block">
      <label for="item">Item:</label>
      <% if @run.item %>
        <input class="form-control" type="text" name="item" value="<%= @run.item.name %>">
      <% else %>
        <input class="form-control" type="text" name="item">
      <% end %>
    </span>
    <span style="display:inline-block">
      <label for="winner">Item Winner:</label>
      <% if @run.winner %>
        <input class="form-control" type="text" name="winner" value="<%= @run.winner.username.capitalize %>">
      <% else %>
        <input class="form-control" type="text" name="winner">
      <% end %>
    </span>
    <span style="display:inline-block">
      <label for="date">Date:</label>
      <input class="form-control width11em date" type="date" name="date" value=<%= @run.date %>>
    </span>
    <span style="display:inline-block">
      <label for="time">Time:</label>
      <input class="form-control time" type="time" name="time" value=<%= @run.time %>>
    </span>
    <input class="btn btn-success" type="submit" value="Edit Log">
  </form>
</div>
